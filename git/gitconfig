[user]
	name = Brian Golden
	email = brian.golden09@gmail.com

[push]
	default = matching

[color]
	ui = auto            # covers diff = true, status = auto, branch = auto
	interactive = auto

[gui]

[core]
	editor = vim
	pager = less -R
	excludesfile = ~/.gitfiles/gitignore

[alias]
	# add
	a = add

	# branch
	br = branch

	# cat-file
	type = cat-file -t
	dump = cat-file -p

	# checkout
	co = checkout
	nb = checkout -b   # create and switch to new branch

	# commit	
	ci = commit
	cm = commit -m

	# diff
	d = diff --color-words
	last = diff HEAD^

	# log
	h = log --pretty=format:\"%Cred%h%Creset %ad | %C(blue)%d%Creset %s [%C(green)%an%Creset]\" --graph --date=short
	hist = log --pretty=format:\"%Cred%h%Creset %ad | %C(blue)%d%Creset %s [%C(green)%an%Creset]\" --graph --date=short

	# pull
	pl = pull

	# push
	pom = push origin master

	# remote
	r = remote -v

	# reset
	u = reset HEAD
	unstage = reset HEAD

	# status
	st = status
	s = status

	# submodule
	sub = submodule
	sa = submodule add

[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
