[user]
	name = Brian Golden
	email = brian.golden09@gmail.com

[push]
	default = matching

[color]
	ui = auto # covers diff = true, status = auto, branch = auto
	interactive = auto

[gui]

[core]
	editor = vim
	pager = less -r

[alias]
	a = add
	co = checkout
	ci = commit
	cm = commit -m 
	st = status
	s = status
	br = branch
	h = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
	sub = submodule
	pom = push origin master
	revert = checkout
	d = diff --color-words

[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
